@model ShopBanHoa.Models.Hoa

@{
    ViewBag.Title = "SuaSanPham";
    Layout = "~/Views/Layout/Layout_Admin.cshtml";
}
<div style="width:60%;margin:0 auto; border:1px solid">
    <div style="text-align:center"><h3>Sữa Thông Tin Sản Phẩm</h3></div>

    <form action="@Url.Action("SuaSanPham", "AD_Home")" method="post" enctype="multipart/form-data">

        <div class="mb-3 row">
            <div class="col-sm-10" style=" margin:0 auto">
                @*<label for="inputPassword" class="col-sm-2 col-form-label">Tên Hoa</label>*@
                <input name="ma" class="form-control form-control-sm" type="hidden" value="@Model.MaHoa" aria-label=".form-control-sm example" style="border:1px solid;border-radius:5px">
            </div>
            <div class="col-sm-10" style=" margin:0 auto">
                <label for="inputPassword" class="col-sm-2 col-form-label">Tên Hoa</label>
                <input name="tenHoa" class="form-control form-control-sm" type="text" value="@Model.TenHoa" aria-label=".form-control-sm example" style="border:1px solid;border-radius:5px">
            </div>
            <div class="col-sm-10" style=" margin:0 auto">
                <label for="inputPassword" class="col-sm-2 col-form-label">Mô Tả</label>
                <input name="moTa" class="form-control form-control-sm" type="text" value="@Model.MoTaHoa" aria-label=".form-control-sm example" style="border:1px solid;border-radius:5px">
            </div>
            <div class="col-sm-10" style=" margin:0 auto">
                <label for="inputPassword" class="col-sm-2 col-form-label">Giá Bán</label>
                <input name="giaBan" class="form-control form-control-sm" type="number" value="@Model.GiaBan" aria-label=".form-control-sm example" style="border:1px solid;border-radius:5px">
            </div>
            <div class="col-sm-10" style=" margin:0 auto">
                <label for="inputPassword" class="col-sm-2 col-form-label">SL Kho</label>
                <input name="slKho" class="form-control form-control-sm" type="number" value="@Model.SoLuongTonKho" aria-label=".form-control-sm example" style="border:1px solid;border-radius:5px">
            </div>

            <div class="col-sm-10" style=" margin:0 auto">
                <label for="inputPassword" class="col-sm-2 col-form-label">Loại Hoa</label>
                <select name="loaiHoa" class="form-select form-select-sm" aria-label=".form-control-sm example" style="border:1px solid;border-radius:5px">
                    <option>Hoa Hồng</option>
                    <option>Hoa Cúc</option>
                    <option>Hoa Lan</option>
                    <option>Hoa Tulip</option>
                    <option>Hoa Giấy</option>

                </select>
            </div>
            <div class="col-sm-10" style=" margin:0 auto">
                <label for="inputPassword" class="col-sm-2 col-form-label">Màu Hoa</label>
                <select name="mauHoa" class="form-select form-select-sm" aria-label=".form-control-sm example" style="border:1px solid;border-radius:5px">
                    <option>Đỏ</option>
                    <option>Vàng</option>
                    <option>Hồng</option>
                    <option>Tím</option>
                    <option>Trắng</option>

                </select>
            </div>
            <div class="col-sm-10" style=" margin:0 auto">
                <label for="inputPassword" class="col-sm-2 col-form-label">Kích Thước</label>
                <select name="kichThuoc" class="form-select form-select-sm" aria-label=".form-control-sm example" style="border:1px solid;border-radius:5px">
                    <option>To</option>
                    <option>Nhỏ</option>
                    <option>Vừa</option>
                </select>
            </div>
            <div class="col-sm-10" style=" margin:0 auto">
                <label for="inputPassword" class="col-sm-2 col-form-label">Khuyến Mãi</label>
                <input name="khuyenMai" class="form-control form-control-sm" type="number" value="@Model.KhuyenMai" aria-label=".form-control-sm example" style="border:1px solid;border-radius:5px">
            </div>
            <div class="col-sm-10" style=" margin:0 auto">
                <label for="inputPassword" class="col-sm-2 col-form-label">Chọn Ảnh</label>
                <input class="form-control form-control-sm" name="fileUpload" type="file" aria-label=".form-control-sm example" style="border:1px solid;border-radius:5px">
            </div>
        </div>
        <div style="text-align:center">

            <button type="submit" class=" btn btn-primary">Sữa Sản Phẩm</button>
        </div>
        <b style="color:red">@ViewBag.tb</b>

    </form>

</div>